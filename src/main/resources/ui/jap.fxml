<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.echchhit.habittracker.controller.JapController" styleClass="content-area">

    <Label text="Naam Jap Tracker" styleClass="page-title"/>

    <HBox spacing="30" VBox.vgrow="ALWAYS">

        <VBox spacing="15" styleClass="card" alignment="CENTER" prefWidth="400" minHeight="300">
            <Label text="Today's Total Chants" styleClass="stat-label"/>
            <TextField fx:id="countField" promptText="Max 100,000" style="-fx-font-size: 24; -fx-alignment: center;"/>
            <Button text="Update Progress" onAction="#handleUpdate"
                    style="-fx-background-color: #6C63FF; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand;"/>
        </VBox>

        <VBox spacing="15" styleClass="card" HBox.hgrow="ALWAYS">
            <Label text="Chant History" styleClass="stat-label"/>
            <ListView fx:id="japHistoryList" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: transparent; -fx-control-inner-background: #f8f9fa;"/>
        </VBox>

    </HBox>
</VBox>