<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.echchhit.habittracker.controller.JapController"
      styleClass="content-area">

    <VBox spacing="5">
        <Label text="Naam Jap" styleClass="page-title"/>
        <Label text="Track your daily spiritual progress" styleClass="stat-label"/>
    </VBox>

    <HBox spacing="30" VBox.vgrow="ALWAYS">

        <VBox spacing="20" prefWidth="380" maxWidth="380">

            <VBox spacing="5" alignment="CENTER" styleClass="card">
                <Label text="TOTAL CHANTS TILL NOW" styleClass="stat-label"/>
                <Label fx:id="totalChantsLabel" text="0" styleClass="jap-total-label"/>
            </VBox>

            <VBox spacing="25" styleClass="card" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <padding><Insets top="40" right="30" bottom="40" left="30"/></padding>

                <VBox spacing="10" alignment="CENTER">
                    <Label text="TODAY'S COUNT" styleClass="stat-label"/>
                    <TextField fx:id="countField" promptText="0"
                               style="-fx-font-size: 36; -fx-font-weight: bold; -fx-alignment: center; -fx-background-color: #f1f3f5; -fx-background-radius: 12; -fx-border-color: #e9ecef; -fx-border-radius: 12; -fx-text-fill: #6C63FF;"/>
                </VBox>

                <Button text="Update Progress" onAction="#handleUpdate"
                        style="-fx-background-color: #6C63FF; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 12 40; -fx-background-radius: 10; -fx-cursor: hand;"/>

                <Region VBox.vgrow="ALWAYS" />

                <Label text="Maximum limit: 100,000 per day" styleClass="stat-label"/>
            </VBox>
        </VBox>

        <VBox spacing="15" styleClass="card" HBox.hgrow="ALWAYS">
            <Label text="HISTORY LOGS" styleClass="stat-label"/>
            <Label text="Right-click an entry to delete" styleClass="stat-label"/>

            <ListView fx:id="japHistoryList" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 5; -fx-selection-bar: transparent; -fx-control-inner-background: transparent;"/>
        </VBox>

    </HBox>
</VBox>